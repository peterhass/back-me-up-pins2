[Unit]
Description=resebo Backup: Home
Requires=network-online.target
After=network-online.target

StartLimitBurst=5
StartLimitIntervalSec=300

[Service]
Type=simple

Restart=on-failure
RestartSec=60s

EnvironmentFile=/etc/resebo-backup
ExecStart=/usr/local/bin/blocking-systemd-inhibit \
  --who="resebo Backup: Home" \
  --why="resebo home backup syncing" \
  --what=sleep \
  -- /usr/local/bin/resebo-backup archive home /home/
